<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="LiveChartsCore.SkiaSharpView.Maui.PieChart"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui">
    <ContentView.Content>
        <lvc:MotionCanvas x:Name="canvas">
            <lvc:MotionCanvas.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTapped"/>
                <PointerGestureRecognizer PointerMoved="OnPointerMoved"
                                          PointerExited="OnPointerExited"/>
            </lvc:MotionCanvas.GestureRecognizers>
        </lvc:MotionCanvas>
    </ContentView.Content>
</ContentView>
